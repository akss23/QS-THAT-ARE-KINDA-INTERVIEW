class Solution {
  public:
    bool isEven(int n) {
        if(n==0) return true;
        if(n<0) n=abs(n);
          vector<int> v;
        //   int n=v.size();
          while(n>0){
              int a = n%10;
              v.push_back(a);
              n=n/10;
          }
          
          if(v[0]==2 || v[0]==0 || v[0]==4 || v[0]==6 || v[0]==8 ) return true;
          return false;
        
    }
};
